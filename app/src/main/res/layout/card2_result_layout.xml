<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton">


        <TextView
            android:id="@+id/idTVResultLogo"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/circular_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/sample_logo_open_2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="2dp" />

        <TextView
            android:id="@+id/idTVResultPlace"
            android:layout_width="177dp"
            android:layout_height="30dp"
            android:maxLines="1"
            android:text="St Rambert Albon"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/idTVResultPts"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/idTVResultLogo"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/idTVLibelle"
            android:layout_width="177dp"
            android:layout_height="25dp"
            android:maxLines="1"
            android:text="Open 2/3 Access (1.25.0)"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/idTVResultLogo"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/idTVResultPosPrts"
            android:layout_width="177dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:maxLines="1"
            android:text="14eme sur 144"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/idTVResultLogo"
            tools:layout_editor_absoluteY="57dp" />

        <TextView
            android:id="@+id/idTVResultPts"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:maxLines="1"
            android:text="123.27 pts"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="2dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="129dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/baseline_delete_24"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="26dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>